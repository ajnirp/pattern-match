<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.rohan.patternmatch.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_name"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="50dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_new_game_text"
        android:onClick="newGame" />

    <Button
        android:id="@+id/button_time_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_time_challenge_text"
        android:onClick="timeChallenge" />

    <Button
        android:id="@+id/button_how_to_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_how_to_play_text"
        android:onClick="howToPlay" />

</LinearLayout>
